!Source code pro
URxvt.allow_bold:           true
URxvt.font: xft:source code pro:regular:pixelsize=14
URxvt.imFont: xft:source code pro:regular:pixelsize=14
URxvt.boldFont: xft:source code pro:semibold:pixelsize=14
URxvt.italicFont: xft:source code pro:italic:pixelsize=14
URxvt.boldItalicFont: xft:source code pro:semibold:italic:pixelsize=14
URxvt.letterSpace: -1

! do not scroll with output
URxvt*scrollTtyOutput: false

! scroll in relation to buffer (with mouse scroll or Shift+Page Up)
URxvt*scrollWithBuffer: true

! scroll back to the bottom on keypress
URxvt*scrollTtyKeypress: true

URxvt.scrollBar: false
