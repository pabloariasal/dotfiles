[color]
bg = #dd282828
fg = #a89984
ws-bg-unfocused = #32302f
ws-fg-unfocused = #8ec07c
ws-bg-focused = #458588
ws-fg-focused = #000000

white = #FFFFFF
black = #000000

;; Colors

red = #EC7875
pink = #EC407A
purple = #BA68C8
blue = #42A5F5
cyan = #4DD0E1
