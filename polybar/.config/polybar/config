[bar/main]
monitor = ${env:MONITOR:eDP1}
width = 100%
height = 12
bottom = true
fixed-center = true
line-size = 2

background = ${color.bg}
foreground = ${color.bg-alt}

border-size = 2
border-color = ${color.bg}

font-0 = "JetBrainsMono Nerd Font Mono:style=Medium:pixelsize=10;2:antialiasing=true"
font-1 = "JetBrainsMono Nerd Font Mono:style=Bold:pixelsize=10;2:antialiasing=true"
font-2 = "Noto Color Emoji:style=Regular:scale=14;2"

cursor-click = pointer
cursor-scroll = ns-resize

wm-name = i3
enable-ipc = true

; Number of spaces to add at the beginning/end of the bar
; Individual side values can be defined using:
;   padding-{left,right}
padding = 1

;separator = |
module-margin = 1

;== System Tray ========================================================

; Position of the system tray window
; If empty or undefined, tray support will be disabled
; NOTE: A center aligned tray will cover center aligned modules
;
; Available positions:
;   left
;   center
;   right
;   none
tray-position = right

; If true, the bar will not shift its
; contents when the tray changes
tray-detached = false

; Tray icon max size
tray-maxsize = 16

; Background color for the tray container
; ARGB color (e.g. #f00, #ff992a, #ddff1023)
; By default the tray container will use the bar
; background color.
tray-background = ${root.background}

; Tray offset defined as pixel value (e.g. 35) or percentage (e.g. 50%)
tray-offset-x = 0
tray-offset-y = 0

; Pad the sides of each tray icon
tray-padding = 0

; Scale factor for tray clients
tray-scale = 1.0

;== Module Location ========================================================

modules-left = datetime vpn
modules-center = i3
modules-right = pomodoro keyboard battery volume xbacklight

[settings]
format-foreground = ${color.fg}

;== Modules ================================================================

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false
enable-scroll = false

; Only show workspaces on the same output as the bar
pin-workspaces = true

; mode = when showing options for an i3 mode
label-mode = %mode%
label-mode-padding = 2
label-mode-foreground = ${color.black}
label-mode-background = ${color.pink}

ws-icon-0 = 1;main
ws-icon-1 = 2;work2
ws-icon-2 = 3;work3
ws-icon-3 = 4;work4
ws-icon-4 = 5;music
ws-icon-5 = 6;www
ws-icon-6 = 7;chat
ws-icon-7 = 8;mail
ws-icon-8 = 9;notes
ws-icon-default =

; focused = Active workspace on focused monitor
label-focused = %icon%
label-focused-foreground = ${color.ws-fg-focused}
label-focused-background = ${color.ws-bg-focused}
label-focused-padding = 1

; unfocused = Inactive workspace on any monitor
label-unfocused = ${self.label-focused}
label-unfocused-foreground = ${color.ws-fg-unfocused}
label-unfocused-background = ${color.ws-bg-unfocused}
label-unfocused-padding = ${self.label-focused-padding}

; visible = Active workspace on unfocused monitor
label-visible = ${self.label-unfocused}
label-visible-foreground = ${self.label-unfocused-foreground}
;label-visible-background = ${self.label-unfocused-background}
label-visible-padding = ${self.label-unfocused-padding}

; urgent = Workspace with urgency hint set
label-urgent = ${self.label-focused}
label-urgent-background = ${color.pink}
label-urgent-padding = ${self.label-focused-padding}

; Separator in between workspaces
;label-separator = " "
;label-separator-padding = 1
;label-separator-foreground = ${color.bg-alt}

[module/battery]
type = internal/battery
full-at = 99
battery = BAT0
adapter = AC0

format-charging-prefix = ${icons.charging}
format-charging = <label-charging>
label-charging = %percentage%%

format-full-prefix = ${self.format-charging-prefix}
format-full = <label-full>
label-full = %percentage%%

format-discharging-prefix = ${icons.discharging}
format-discharging = <label-discharging>
label-discharging = %percentage%%

[module/window]
type = internal/xwindow
format = <label>
format-prefix = ${icons.window}
label = %title%
label-maxlen = 30
;label-foreground = ${color.purple}

[module/xbacklight]
type = internal/xbacklight
label-maxlen = 50

format = <label>
format-prefix = ${icons.brightness}
label = %percentage%%

[module/volume]
type = internal/alsa
format-volume = <label-volume>
format-volume-prefix = ${icons.volume}
label-volume = "%percentage%%"
label-muted = ${icons.muted}

[module/keyboard]
type = internal/xkeyboard

; List of indicators to ignore
blacklist-0 = num lock
blacklist-1 = scroll lock

format = <label-layout>
format-spacing = 0
label-layout = %layout%
format-prefix = ${icons.keyboard}

[module/network]
type = internal/network
interface = wlp2s0
interval = 3.0

format-connected-prefix = ${icons.wifi}
format-connected = <label-connected>
label-connected = %essid%

format-disconnected-prefix = ${self.format-connected-prefix}
format-disconnected = <label-disconnected>
label-disconnected = %ifname% disconnected

[module/date]
type = internal/date
interval = 10

time = "%a %b %e"

format = <label>
;format-prefix = ${icons.calendar}
label = %time%

[module/time]
type = internal/date
interval = 10

time = "%H:%M"

format = <label>
;format-prefix = ${icons.time}
label = %time%

[module/datetime]
type = internal/date
interval = 10

time = "%H:%M %a %b %e"

format = <label>
;format-prefix = ${icons.calendar}
label = %time%

[module/time-colombia]
type = custom/script
exec = TZ=America/Bogota date +"BOG %H:%M"
format-prefix = ${icons.time}
format = <label>
interval = 10

[module/spotify]
type = custom/script
interval = 0.3
exec = polybar_spotify_status -f '{play_pause} {artist} - {song}' --trunclen 20 --playpause-font 3 -p ▶,⏸
click-left = playerctl play-pause
click-middle = playerctl prev
click-right = playerctl next

[module/pomodoro]
type = custom/script
exec = pymodoro -ltr -bp "☕" -pp "🍅 " -p "=" -b "=" -f ~/.pomodoro_session
label = %output%
tail = true
click-left = pomodoro_start
click-right = pomodoro_stop

[module/systemmenu]
type = custom/text
content = "%{T2}  %{T-}"
content-foreground = ${color.orange}
click-left = powermenu

[module/vpn]
type = custom/script
exec = vpn_status
exec-if = vpn_status
interval = 3
click-left = vpn_disconnect
label = %output:0:15:...%
format-prefix = ${icons.vpn}

[module/logo]
type=custom/text
content = 
content-foreground=#1793d1
content-padding=0

