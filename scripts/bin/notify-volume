#!/bin/bash

# Arbitrary but unique message id
msgId="991049"

icons="/usr/share/icons/mate/scalable/status"
icon_volume="${icons}/audio-volume-high-symbolic.svg"
icon_muted="${icons}/audio-volume-muted-symbolic.svg"

# Query amixer for the current volume and whether or not the speaker is muted
volume=$(echo "$1" | tail -1 | awk '{print $4}' | sed 's/[^0-9]*//g')
mute=$(echo "$1" | tail -1 | awk '{print $6}' | sed 's/[^a-z]*//g')
if [[ $volume == 0 || "$mute" == "off" ]]; then
    # Show the sound muted notification
    dunstify -a "notify_volume" -u low -i "$icon_muted" -r "$msgId" "muted"
else
    # Show the volume notification
    dunstify -a "notify_volume" -u low -i "$icon_volume" -r "$msgId" "${volume}%"
fi

# Play the volume changed sound
canberra-gtk-play -i audio-volume-change -d "changeVolume"
