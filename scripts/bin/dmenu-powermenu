#!/bin/bash

shutdown="Shutdown"
reboot="Reboot"
lock="Lock"
suspend="Suspend"
hibernate="Hibernate"
logout="Logout"

# Variable passed to dmenu
options="$lock\n$reboot\n$shutdown\n$suspend\n$hibernate\n$logout"

chosen="$(echo -e "$options" | dmenu -p "What do?")"
case $chosen in
    $shutdown)
        systemctl poweroff
        ;;
    $reboot)
        systemctl reboot
        ;;
    $lock)
        lock-screen
        ;;
    $suspend)
        lock-screen
        systemctl suspend
        ;;
    $hibernate)
        lock-screen
        systemctl hibernate
        ;;
    $logout)
        i3-msg exit
        ;;
esac
