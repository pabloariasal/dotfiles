# Adapted from: https://github.com/i3/i3status/blob/main/contrib/any_position_wrapper.sh
# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        output_format = "i3bar"
        markup = "pango"
        colors = true
        interval = 1
}

# order += "tztime holder__hey_man"
order += "tztime holder__vpn"
order += "read_file theme"
order += "cpu_temperature 0"
order += "memory"
order += "cpu_usage"
order += "disk /"
order += "tztime holder__brightness"
order += "volume master"
order += "read_file sink"
order += "battery all"
order += "tztime date"
order += "tztime timezone"
order += "tztime time"

volume master {
        format = "🔊%volume"
        format_muted = "🔊 muted"
        device = "pulse"
}

battery all {
        format = "🔋%percentage %remaining"
        # format_down = "No battery"
        # status_chr = "⚡ CHR"
        # status_bat = "🔋 BAT"
        # status_unk = "? UNK"
        # status_full = "☻ FULL"
        # path = "/sys/class/power_supply/BAT%d/uevent"
        hide_seconds = true
        last_full_capacity = true
        integer_battery_capacity = true
        threshold_type = "percentage"
        low_threshold = 30
}

tztime date {
  # format = "%time"
  format= "📅%a %b %e %Y"
}

tztime time {
  format = "<span size='large'>%H:%M</span>"
  # format_time = "%H:%M"
}

tztime timezone {
  format = "🌎%Z"
  # format_time = "%Z"
}

tztime holder__hey_man {
       format = "placeholder"
}

tztime holder__vpn {
       format = "placeholder"
}

tztime holder__brightness {
       format = "placeholder"
}

read_file sink {
    format = "<span color='#ffffff'>%content</span>"
    format_bad = ""
    path = "~/.sink_pulseaudio"
}

read_file theme {
    format = "🎨<span color='#ffffff'>%content</span>"
    format_bad = ""
    path = "~/.theme"
}

memory {
        format = "💾RAM %percentage_used"
        memory_used_method = "memavailable"
        threshold_degraded = "10%"
        format_degraded = "MEMORY: %free"
}

cpu_usage {
        format = "️🖥CPU %usage"
        max_threshold=75
}

cpu_temperature 0 {
        format = "🌡%degrees°C"
}

disk "/" {
        format = "💽DISK %percentage_used (%avail avail)"
}
