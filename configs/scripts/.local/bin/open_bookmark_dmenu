#!/bin/bash

bookmarks="${HOME}/.bookmarks.txt"
chosen=$(nl -w1 -s ' ' "${bookmarks}" | awk '{NF--; print}' | bemenu_wrapper -l 10 -w -p 'Bookmarks' -c -B 1 -W 0.25)

if [ -z "$chosen" ]; then
    exit 0
fi

index=$(echo $chosen | awk '{print $1}')
url=$(awk 'NR==x {print $NF}' x=${index} "${bookmarks}")
${CHROMIUM_EXEC} "$url"
