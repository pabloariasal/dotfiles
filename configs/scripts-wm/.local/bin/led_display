#!/usr/bin/env python3

import sys

message = sys.argv[1]
banner_length = int(sys.argv[2])
tic = int(sys.argv[3])

heading_spaces = banner_length - tic
prefix = (' ' * heading_spaces)
body = message if tic > len(message) else message[:tic]
trailing_spaces = tic - len(body)
suffix = (' ' * trailing_spaces)
final = prefix + body + suffix
print(final)
assert len(final) == banner_length
