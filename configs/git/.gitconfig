[user]
	name = Pablo Arias
[core]
	excludesfile = ~/.gitignore_global
	pager = delta
[diff]
	tool = vimdiff
	colorMoved = default
[difftool]
	prompt = true
[difftool "vimdiff"]
	path = nvim
[merge]
	tool = vimdiff
	conflictstyle = diff3
[mergetool]
	prompt = true
[mergetool "vimdiff"]
	path = nvim
[interactive]
	diffFilter = delta --color-only
[delta]
	navigate = true
	hunk-header-style = omit
	file-modified-label = ""
	file-decoration-style = "ul ol blue"
[delta "side-by-side"]
	side-by-side = true
	line-numbers = true
