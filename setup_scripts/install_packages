aur_packages=(spotify
    antigen-git
    pymodoro-git
    ccls-git
    chromium-widevine
    fast
    gotop-bin
    python-ueberzug
    xcursor-oxygen
    polybar)

function install_yay()
{
    rm -rf ~/yay
    git clone https://aur.archlinux.org/yay.git ~/yay
    cd ~/yay
    makepkg -si
}

function install_aur()
{
    yay -S --noconfirm "${aur_packages[@]}"
}

function install_packages()
{
    pacman -S --noconfirm "${packages[@]}"
}

"$1"
